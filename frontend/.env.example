# CuraGenie Frontend Environment Variables - Production Ready

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Application Information
NEXT_PUBLIC_APP_NAME=CuraGenie
NEXT_PUBLIC_APP_VERSION=2.0.0-production
NEXT_PUBLIC_APP_DESCRIPTION=AI-Powered Healthcare Platform

# Feature Flags (Enable/Disable Features)
NEXT_PUBLIC_ENABLE_GENOMICS=true
NEXT_PUBLIC_ENABLE_MRI_ANALYSIS=true
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true
NEXT_PUBLIC_ENABLE_REPORTS=true
NEXT_PUBLIC_ENABLE_DEBUG=false

# File Upload Settings
NEXT_PUBLIC_MAX_FILE_SIZE=104857600
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.vcf,.vcf.gz,.fastq,.fq,.fastq.gz,.fq.gz
NEXT_PUBLIC_CHUNK_SIZE=1048576

# UI Settings
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_SOUNDS=false

# Analytics & Monitoring (Optional)
# NEXT_PUBLIC_GA_ID=your-google-analytics-id
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Authentication Settings
NEXT_PUBLIC_AUTH_TIMEOUT=3600000
NEXT_PUBLIC_ENABLE_GUEST_MODE=true

# Performance
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_RETRY_ATTEMPTS=3
NEXT_PUBLIC_RETRY_DELAY=1000

# Environment
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_NODE_ENV=production

# Build Settings
NEXT_PUBLIC_BUILD_TIME=2025-01-08
NEXT_PUBLIC_COMMIT_HASH=latest

# Contact Information
NEXT_PUBLIC_SUPPORT_EMAIL=support@curagenie.com
NEXT_PUBLIC_PRIVACY_URL=/privacy-policy
NEXT_PUBLIC_TERMS_URL=/terms-of-service

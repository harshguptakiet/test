# Copy to .env.prod and fill in real values before deploying

# Postgres
POSTGRES_DB=curagenie
POSTGRES_USER=curagenie
POSTGRES_PASSWORD=change-me
# Compose-driven DATABASE_URL using Postgres service hostname
DATABASE_URL=postgresql+psycopg2://curagenie:change-me@postgres:5432/curagenie

# Backend
SECRET_KEY=please-generate-a-long-random-secret
CORS_ORIGINS=https://your-frontend.example.com,https://www.your-frontend.example.com
DEBUG=false
LOG_LEVEL=INFO
ENABLE_REAL_GENOMIC_ANALYSIS=true
ENABLE_ENHANCED_MRI=false
ENABLE_ML=false
BACKEND_PORT=8000

# Frontend public URLs (must be the real public backend URL you expose)
NEXT_PUBLIC_API_URL=https://api.your-domain.example.com
NEXT_PUBLIC_WS_URL=wss://api.your-domain.example.com
FRONTEND_PORT=3000

# AWS / S3 (only needed if you use S3 upload endpoints)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=curagenie-genomic-data

